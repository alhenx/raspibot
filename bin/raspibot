#!/bin/bash

if [ "$1" != "" ]; then
	case $1 in
		"update")
			echo 2 | bash <(curl -sL git.io/raspibotsetup)
		;;
		"status")
			/usr/bin/systemctl status raspibot.service
		;;
		"exec")
			python /opt/raspibot-setup/raspibot/raspibot.py &
		;;
		"restart")
			sudo /usr/local/bin/restartraspibot.sh
		;;
		"help")
			echo "Uso: rasipbot [opci칩n]"
			echo "Las opciones disponbiles son:"
			echo -e "\t update - Actualizar RaspiBot."
			echo -e "\t status - Muestra el estado de RaspiBot."
			echo -e "\t exec - Ejecutable para RaspiBot (Python)."
			echo -e "\t restart - Reiniciar el servicio de RaspiBot."
			echo -e "\t help - Ayuda de este ejecutable."
		;;
		*)
			echo "Opci칩n inv치lida. Use help para ver una lista de opciones."
		;;
	esac
else
	echo "Debe introducir una opci칩n. Use help para ver una lista de opciones."
fi
