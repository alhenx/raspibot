#!/bin/bash

if [ "$1" != "" ]; then

	case $1 in
		"update")
			echo 2 | bash <(curl -sL git.io/raspibotsetup)
		;;
		"status")
			/usr/bin/systemctl status raspibot.service
		;;
		"exec")
			python /opt/raspibot-setup/raspibot/raspibot.py &
		;;
		*)
			echo "Opción inválida. Uso:"
			echo -e "\t update - Actualizar el bot."
			echo -e "\t status - Muestra el estado del bot."
			echo -e "\t exec - Ejecutable para el bot (Python)."
		;;
	esac
else
	echo "Debe introducir una acción."
fi
